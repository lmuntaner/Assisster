<div class="modal-content appointment-content">
	<div class="panel-heading">
		<h3 class="panel-title">Create Office Hour</h3>
	</div>
	<div class="panel-body">
		<form role="form">
			<div class="form-inputs">
				<h6>Add more days</h6>
				<% week.forEach(function (nextDate) { %>
					<label class="next-date">
						<%= nextDate.format("DD MMM") %>
						<input type="checkbox"
									 value="<%= nextDate.format('M/D/YYYY') %>"
									 name="appointment[nextDate][]">
					</label>
				<% }) %>
			</div>
			<button type="button"
							id="submit-office-hour-form"
							class="btn btn-primary">
							Save
			</button>
			<button type="button"
							id="close-office-hour-form"
							class="btn btn-default">
							Close
			</button>
			<% if (!appointment.isNew() && appointment.get('appointment_status') !== 'Cancelled') { %>
				<button type="button"
								id="cancel-office-hour-form"
								class="btn btn-danger cancel">
								Cancel Office Hours
				</button>
			<% } %>
		</form>
	</div>
</div> <!-- /.modal-content -->