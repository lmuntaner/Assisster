<div class="modal-content appointment-content">
	<div class="panel-heading">
		<h3 class="panel-title">Create New Event</h3>
	</div>
	<div class="panel-body">
		<form role="form">
			<div class="form-inputs">
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<div class="form-group">
							<input type="text" name="appointment[email]" class="form-control input-sm" placeholder="Email" value="<%= appointment.escape('email') %>">
						</div>
					</div>
				</div>
						
				<div class="row">
					<div class="col-xs-6 col-sm-12 col-md-6">
						<div class="form-group">
							<input type="text" name="appointment[fname]" class="form-control input-sm" placeholder="First Name" value="<%= appointment.escape('fname') %>">
						</div>
					</div>
					<div class="col-xs-6 col-sm-12 col-md-6">
						<div class="form-group">
							<input type="text" name="appointment[lname]" class="form-control input-sm" placeholder="Last Name" value="<%= appointment.escape('lname') %>">
						</div>
					</div>
				</div>
						
				<div class="row">
					<div class="col-xs-12 col-sm-12 col-md-12">
						<div class="form-group">
							<input type="text" name="appointment[title]" class="form-control input-sm" placeholder="title" value="<%= appointment.escape('title') %>">
						</div>
					</div>
				</div>					
			</div>

			<button type="button"
							id="submit-appointment-form"
							class="btn btn-primary">
							Save
			</button>
			<button type="button"
							id="close-appointment-form"
							class="btn btn-default">
							Close
			</button>
			<% if (!appointment.isNew()) { %>
				<button type="button"
								id="cancel-appointment-form"
								class="btn btn-danger cancel">
								Cancel Appointment
				</button>			
			<% } %>

		</form>
	</div>
</div> <!-- /.modal-content -->
