<% if @doctor.id == 1 %>
	<% password = "wheatbelly" %>
<% else %>
	<% password = "" %>
<% end %>

<div class="modal fade" id="sign-in-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
        <h4 class="modal-title">Iniciar sesi√≥n</h4>
      </div>
			<form role="form" action="<%= session_url %>" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<fieldset>
					<div class="row">
						<div class="center-block">
							<!-- <%= image_tag("profile-picture.png", class: "profile-img")%> -->
							<i class="fa fa-user-md profile-icon"></i>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12 col-md-10  col-md-offset-1 ">
							<% if flash[:errors] %>
								<span class="signin-validation"><%= flash[:errors].first %></span>
							<% end %>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-pencil fa-fw"></i>
									</span> 
									<input class="form-control" placeholder="Email" name="doctor[email]" type="text"
									<% if @doctor.id == 1  %>
										value="<%= @doctor.email %>"
									<% else %>
										value=""
									<% end %>
									autofocus>
								</div>
							</div>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon">
										<i class="fa fa-key fa-fw"></i>
									</span>
									<input class="form-control" placeholder="Password" name="doctor[password]" type="password" value="<%= password %>">
								</div>
							</div>
							<div class="form-group">
								<input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar">
							</div>
						</div>
					</div>
				</fieldset>
			</form>
    </div> <!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->